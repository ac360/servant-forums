<a name='post-<%= post.id %>'></a>
<div id='post_<%= post.id %>' class='reply_to_post post <%= cycle('odd', 'even') -%>'>

  <div class='user'>
    <div class='username s-centered s-red'>
      <%= link_to_if Forem.user_profile_links, post.user.username, [main_app, post.user] %>
    </div>
  </div>

  <div class='contents s-centered'>

    <%= forem_format(post.text) %>

    <% if post.reply_to %>
      <span class='in_reply_to'>
        <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user}", "#post-#{post.reply_to.id}" %>
      </span>
    <% end %>
  </div>
</div>