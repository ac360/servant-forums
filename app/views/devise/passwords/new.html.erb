<h3 class="s-centered s-font" style="margin-bottom:15px;">Retrieve Password</h3>

<center>
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	  <%= f.error_notification %>

	  <div class="inputs">
	    <%= f.input :email, :required => true %>
	  </div>

	  <div class="actions">
	    <%= f.button :submit, "Send me reset password instructions", :class => 'btn s-btn-red-small' %>
	  </div>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
<center>